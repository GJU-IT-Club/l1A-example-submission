---
import IT from "@/assets/it.svg";
import Github from "@/assets/github.svg";

import { Image } from "astro:assets";
const logos = [
  {
    name: "IT Club",
    src: IT,
    link: "https://it.gju.app",
  },
  {
    name: "Github",
    src: Github,
    link: "https://github.com/GJU-IT-Club/l1A-example-submission",
  },
];

const date = new Date().getFullYear();
---

<footer
  class="flex flex-col-reverse md:flex-row justify-between items-center container mx-auto text-center px-10"
>
  <div class="text-auto sm:text-lg">
    &copy; {date} der Kartoffel. All rights reserved ðŸ¥”
  </div>
  <div class="flex flex-row items-center text-5xl space-x-4">
    {
      logos.map((logo) => (
        <a href={logo.link} target="_blank">
          <picture>
            <Image
              src={logo.src}
              alt={logo.name}
              width={36}
              class={"text-gravy"}
            />
          </picture>
        </a>
      ))
    }
  </div>
</footer>
